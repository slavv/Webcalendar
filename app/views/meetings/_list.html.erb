<table>
  <tr>
    <th>Category</th>
    <th>Date and time</th>
    <th>Place</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @meetings.each do |meeting| %>
  <tr>
    <td><%= meeting.category && meeting.category.name %></td>
    <td><%= meeting.date_time.to_formatted_s(:long_ordinal) %></td>
    <td><%= meeting.place %></td>
    <td><%= meeting.notes %></td>
    <td><%= link_to 'Show', [@user, meeting] %></td>
    <td><%= link_to 'Edit', edit_user_meeting_path(@user, meeting) %></td>
    <td><%= link_to 'Destroy', [@user, meeting], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

